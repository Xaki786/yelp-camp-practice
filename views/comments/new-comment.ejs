<div class="row my-5">
  <div class="col-md-2 col-lg-3"></div>
  <div class="col-md-8 col-lg-6">
    <h1 class="h2 text-center mb-5">Add New Comment</h1>
    <form action="/campgrounds/<%=campgroundId%>/comments" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" placeholder="Enter your comment here" autofocus>
      </div>
      <div class="form-group">
        <button class="btn btn-block btn-primary">Submit</button>
      </div>
    </form>
  </div>
  <div class="col-md-2 col-lg-3"></div>
</div>
