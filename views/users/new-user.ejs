<% include ../partials/header.ejs %>
<div class="row my-5">
  <div class="col-md-2 col-lg-3"></div>
  <div class="col-md-8 col-lg-6">
    <h1 class="h2 text-center mb-5">Sign up</h1>
    <form action="/register" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="username" placeholder="Enter username here" autofocus>
      </div>
      <div class="form-group">
        <input class="form-control" type="password" name="password" placeholder="Enter your password here">
      </div>
      <div class="form-group">
        <button class="btn btn-block btn-primary">Submit</button>
      </div>
    </form>
  </div>
  <div class="col-md-2 col-lg-3"></div>
</div>
