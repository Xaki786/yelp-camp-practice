<% include ../partials/header.ejs %>
<div class="row my-5">
  <div class="col-md-2 col-lg-3"></div>
  <div class="col-md-8 col-lg-6">
    <h1 class="h3 text-center mb-5">Add New Campground</h1>
    <form action="/campgrounds" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" autofocus placeholder="Enter campground name" name="campground[name]">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" placeholder="Enter campground image url" name="campground[url]">
      </div>
      <div class="form-group">
        <textarea class="form-control" rows="5" placeholder="Enter campground Description" name="campground[desc]"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-block btn-primary">Submit</button>
      </div>
    </form>
  </div>
  <div class="col-md-2 col-lg-3"></div>
</div>