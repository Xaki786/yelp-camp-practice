<% include ../partials/header.ejs %>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="my-5">
      <h3 class="text-center my-5">Add New campground</h3>
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <label for="#name">Name:</label>
          <input class="form-control" type="text" name="campground[name]" placeholder="Enter name of the campground" id="name">
        </div>
        <div class="form-group">
          <label for="#url">Image Url:</label>
          <input class="form-control" type="text" name="campground[url]" placeholder="Enter image url" id="url">
        </div>
        <div class="form-group">
          <label for="desc">Description</label>
          <textarea class="form-control" rows="5" name="campground[desc]" id="#desc" placeholder="Enter description of your campground"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-block btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
  <div class="col-md-3"></div>
</div>
