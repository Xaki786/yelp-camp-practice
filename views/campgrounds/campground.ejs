<% include ../partials/header.ejs %>
<div class="row mt-5">
  <%if(ejsCampground){%>
  <!-- Modal for edit campground-->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Edit Campground</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <form action="/campgrounds/<%=ejsCampground.id%>?_method=PUT" method="POST">
            <div class="form-group">
              <label for="#name">Name:</label>
              <input class="form-control" type="text" value="<%=ejsCampground.name%>" name="campground[name]" id="name">
            </div>
            <div class="form-group">
              <label for="#url">Image Url:</label>
              <input class="form-control" type="text" value="<%=ejsCampground.url%>" name="campground[url]" id="url">
            </div>
            <div class="form-group">
              <label for="desc">Description</label>
              <textarea class="form-control" rows="5" name="campground[desc]"><%=ejsCampground.desc%></textarea>
            </div>
            <div class="form-group">
              <button class="btn btn-block btn-primary">Submit</button>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <!--END OF MODAL-->

  <!-- Modal for edit campground-->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Edit Campground</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <form action="/campgrounds/<%=ejsCampground.id%>?_method=PUT" method="POST">
            <div class="form-group">
              <label for="#name">Name:</label>
              <input class="form-control" type="text" value="<%=ejsCampground.name%>" name="campground[name]" id="name">
            </div>
            <div class="form-group">
              <label for="#url">Image Url:</label>
              <input class="form-control" type="text" value="<%=ejsCampground.url%>" name="campground[url]" id="url">
            </div>
            <div class="form-group">
              <label for="desc">Description</label>
              <textarea class="form-control" rows="5" name="campground[desc]"><%=ejsCampground.desc%></textarea>
            </div>
            <div class="form-group">
              <button class="btn btn-block btn-primary">Submit</button>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <!--END OF MODAL-->
  <div class="col-md-3">
    <ul class="list-group">
      <li class="list-group-item-action list-group-item active">Info 1</li>
      <li class="list-group-item-action list-group-item">Info 2</li>
      <li class="list-group-item-action list-group-item">Info 3</li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="card">
      <img src="<%=ejsCampground.url%>" alt="<%=ejsCampground.name%>" class="card-img-top">
      <div class="d-flex">
        <div class="ml-auto"><small><i>Created by: Zakria</i></small></div>
      </div>
      <div class="d-flex">
        <div class="mt-3 ml-auto">
          <form action="/campgrounds/<%=ejsCampground.id%>?_method=DELETE" method="POST" class="d-inline-block">
            <button class="btn btn-sm btn-outline-danger">Delete Campground</button>
          </form>
          <a href="/campgrounds/<%=ejsCampground.id%>/edit" class="btn btn-sm btn-outline-primary" data-toggle="modal"
            data-target="#myModal">Edit Campground</a>
          <a href="/campgrounds/<%=ejsCampground.id%>/comments/new" class="btn btn-sm btn-success">Leave Review</a>
        </div>
      </div>
      <div class="card-body">
        <div class="card-title">
          <h4>
            <%=ejsCampground.name%>
          </h4>
        </div>
        <p class="card-text">
          <%=ejsCampground.desc%>
        </p>
        <ul class="list-group">
          <%if( ejsCampground.comments && ejsCampground.comments.length){%>
          <%ejsCampground.comments.map(comment => {%>
          <li class="list-group-item">
            <%=comment.text%>
          </li>
          <%})%>
          <%}%>
        </ul>
      </div>
    </div>
  </div>
  <%}else{%>
  <div class="m-5">
    <h3 class="display-3">Campground Not Found</h3>
  </div>
  <%}%>
</div>
<% include ../partials/footer.ejs %>