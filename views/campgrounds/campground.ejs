<% include ../partials/header.ejs %>
<div class="row mt-5">
  <%if(ejsCampground){%>
  <div class="col-md-3">
    <ul class="list-group">
      <li class="list-group-item-action list-group-item active">Info 1</li>
      <li class="list-group-item-action list-group-item">Info 2</li>
      <li class="list-group-item-action list-group-item">Info 3</li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="card">
      <img src="<%=ejsCampground.url%>" alt="<%=ejsCampground.name%>" class="card-img-top">
      <div class="d-flex">
        <div class="ml-auto"><small><i>Created by: Zakria</i></small></div>
      </div>
      <div class="d-flex">
        <div class="mt-3 ml-auto"><button class="btn btn-sm btn-success">Leave Review</button></div>
      </div>
      <div class="card-body">
        <div class="card-title">
          <h4>
            <%=ejsCampground.name%>
          </h4>
        </div>
        <p class="card-text">
          <%=ejsCampground.desc%>
        </p>
      </div>
    </div>
  </div>
  <%}else{%>
  <div class="m-5">
    <h3 class="display-3">Campground Not Found</h3>
  </div>
  <%}%>
</div>
<% include ../partials/footer.ejs %>