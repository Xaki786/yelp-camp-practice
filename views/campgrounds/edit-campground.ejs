<% include ../partials/header.ejs %>
<div class="row my-5">
  <div class="col-md-2 col-lg-3"></div>
  <div class="col-md-8 col-lg-6">
    <h1 class="h2 text-center mb-5">Edit Campground</h1>
    <form action="/campgrounds/<%=ejsCampground.id%>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="#name">Name:</label>
        <input class="form-control" type="text" value="<%=ejsCampground.name%>" name="campground[name]" id="name">
      </div>
      <div class="form-group">
        <label for="#url">Image Url:</label>
        <input class="form-control" type="text" value="<%=ejsCampground.url%>" name="campground[url]" id="url">
      </div>
      <div class="form-group">
        <label for="desc">Description</label>
        <textarea class="form-control" rows="5" name="campground[desc]"><%=ejsCampground.desc%></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-block btn-primary">Submit</button>
      </div>
    </form>
  </div>
  <div class="col-md-2 col-lg-3"></div>
</div>
<% include ../partials/footer.ejs %>